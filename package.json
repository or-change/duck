{
	"name": "@produck/duck-workspace",
	"private": true,
	"scripts": {
		"deps:install": "npm -v && npm i",
		"lint": "eslint --fix packages/**/*.mjs",
		"test": "npm run build:extract --workspaces && npm run test --workspaces",
		"coverage": "c8 --exclude=**/*.spec.mjs --reporter=lcov npm run test",
		"publish": "npm run lint && npm test && lerna publish --no-private"
	},
	"devDependencies": {
		"@eslint/js": "^9.15.0",
		"@produck/eslint-rules": "^0.2.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.9.3",
		"c8": "^10.1.2",
		"eslint": "^9.15.0",
		"globals": "^15.12.0",
		"lerna": "^8.1.9",
		"mocha": "^10.8.2",
		"rollup": "^4.27.4",
		"typescript-eslint": "^8.15.0"
	},
	"workspaces": [
		"packages/duck",
		"packages/duck-log",
		"packages/duck-runner",
		"packages/duck-web",
		"packages/duck-workspace"
	]
}
